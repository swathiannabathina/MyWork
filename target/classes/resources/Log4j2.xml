<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  
  <Properties>
  	<Property name="basePath">./logs</Property>
  </Properties>
  
  <Appenders>
  <RollingFile name="File" fileName="${basePath}/Results.log" filePattern="${basePath}/Results-%d{HH:mm:ss.SSS}.log">
     <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
      <SizeBasedTriggeringPolicy size="500" />
   </RollingFile>
  
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
  <Logger name="kmart.appliances.kitchenAppliences.Refregirators" level="trace" additivity="false">
  	<AppenderRef ref="File"/>
  </Logger>
  
  <!--<Logger name="kmart.appliances.cookingAppliences.*" level="trace" additivity="false">
  	<AppenderRef ref="Console"/>
  </Logger>-->
  
    <Root level="trace">
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>
</Configuration>